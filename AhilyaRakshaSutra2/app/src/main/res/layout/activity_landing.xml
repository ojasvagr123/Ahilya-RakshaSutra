<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <!-- Main Content Container -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/footer_wave_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:backgroundTint="@color/blue_start"

        android:padding="30dp">

        <!-- Logo Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/blue_start"

            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Logo Square -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/blue_start"
                android:layout_marginBottom="15dp" />

            <!-- Logo Text Container -->
            <TextView
                android:id="@+id/back"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/blue_start"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="AHILYA RAKSHA SUTRA"
                android:textColor="#666666"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Description Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4dp"
            android:text="A Smart City cybercrime reporting platform for quick and secure reporting of WhatsApp, SMS, and URL scams."
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="20sp" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Login Button -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue_start"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-medium"
                android:stateListAnimator="@animator/button_elevation" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Register"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/blue_start"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:stateListAnimator="@animator/button_elevation" />

        </LinearLayout>

    </LinearLayout>

    <!-- Footer Wave -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_wave_background" />

</RelativeLayout>

